<%- include('partials/header'); -%>

<!-- Hero Section -->
<section class="hero">
  <div class="hero-container">
    <h1 class="hero-title">Hello, I'm <span>KK Singh</span></h1>
    <p class="hero-subtitle">A Professor passionate about teaching.</p>
    <a href="#projects" class="btn hero-btn">View My Work</a>
  </div>
  <div class="hero-image">
    <img src="public/img/logo.png" alt="Hero Image" />
  </div>
</section>

<!-- About Me Section -->
<section class="about" id="about">
  <div class="container about-container">
    <h2>About Me</h2>
    <p class="about-text">
      I am a <span class="highlight">third-year Computer Science and Engineering student</span> at 
      <span class="highlight">NIT Jamshedpur</span>, passionate about <span class="highlight">software development</span>, 
      <span class="highlight">web applications</span>, and <span class="highlight">data science</span>. I love tackling challenges 
      and delivering elegant, user-friendly solutions through code.
    </p>
    <div class="about-buttons">
      <a href="#contact" class="btn about-btn">Let's Connect</a>
      <a href="#projects" class="btn about-btn-secondary">View My Work</a>
    </div>
  </div>
</section>

<style>
  /* About Me Section Styling */
  .about {
    padding: 80px 0;
    background: linear-gradient(to right, #007bff, #6610f2);
    color: white;
    text-align: center;
    border-radius: 15px;
  }

  .about-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .about-text {
    font-size: 1.2rem;
    line-height: 1.8;
    margin-bottom: 30px;
  }

  .highlight {
    color: #ffc107;
    font-weight: bold;
    font-style: italic;
  }

  .about-buttons {
    display: flex;
    justify-content: center;
    gap: 15px;
  }

  .about-btn {
    background-color: #28a745;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .about-btn:hover {
    transform: scale(1.1);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
  }

  .about-btn-secondary {
    background-color: #ffc107;
    color: #343a40;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .about-btn-secondary:hover {
    transform: scale(1.1);
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
  }
</style>


<!-- Projects Section -->
<section class="projects" id="projects">
  <div class="container">
    <h2>My Projects</h2>
    <div class="projects-grid">
      <% for(var i=0;i<projects.length;i++){ %>
      <div class="project-card">
        <div class="project-content">
          <h3><%= projects[i].title %></h3>
          <p><%= projects[i].description.substring(0,150) %>...</p>
          <a href="/projects/<%= projects[i].id %>" class="btn project-btn">View Project</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</section>

<style>
  /* Projects Section Styling */
  .projects {
    padding: 80px 0;
    background: #f8f9fa;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 30px;
  }

  .project-card {
    background: #fff;
    border-radius: 20px;
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
    transition: transform 0.4s ease, box-shadow 0.4s ease;
    overflow: hidden;
  }

  .project-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 12px 25px rgba(0, 0, 0, 0.2);
  }

  .project-content {
    padding: 20px;
    text-align: center;
  }

  .project-card h3 {
    margin-bottom: 15px;
    font-size: 1.5rem;
    color: #343a40;
  }

  .project-card p {
    font-size: 1rem;
    color: #6c757d;
    margin-bottom: 20px;
  }

  .project-btn {
    background: #007bff;
    color: #fff;
    padding: 10px 20px;
    border-radius: 50px;
    text-decoration: none;
    font-weight: bold;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .project-btn:hover {
    background-color: #0056b3;
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>


<!-- Contact Section -->
<section class="contact" id="contact">
  <div class="container contact-container">
    <h2>Get in Touch</h2>
    <p>Interested in collaborating? Let's connect!</p>
    <a href="mailto:harshit@example.com" class="btn contact-btn">Send an Email</a>
  </div>
</section>

<!-- Footer -->
<footer>
  <div class="footer-container">
    <ul class="social-links">
      <li><a href="https://github.com" target="_blank"><i class="fab fa-github"></i> GitHub</a></li>
      <li><a href="https://linkedin.com" target="_blank"><i class="fab fa-linkedin"></i> LinkedIn</a></li>
    </ul>
  </div>
</footer>

<style>
  /* Contact Section */
.contact {
  padding: 60px 20px;
  text-align: center;
  background: linear-gradient(135deg, #3a3a3a, #1e1e1e);
  border-top: 3px solid #ff6f61;
}

.contact h2 {
  font-size: 2.5rem;
  margin-bottom: 20px;
  color: #ff6f61;
}

.contact p {
  font-size: 1.2rem;
  margin-bottom: 30px;
  color: #ccc;
}

.contact-btn {
  background-color: #ff6f61;
  color: white;
  padding: 15px 30px;
  border-radius: 50px;
  text-decoration: none;
  transition: background-color 0.3s ease, transform 0.3s ease;
  font-weight: 600;
}

.contact-btn:hover {
  background-color: #ff3b2e;
  transform: scale(1.05);
}

/* Footer Section */
footer {
  background: linear-gradient(135deg, #2e2e2e, #1c1c1c);
  padding: 40px 0;
  text-align: center;
  position: relative;
}

.footer-container {
  max-width: 1100px;
  margin: 0 auto;
}

.social-links {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  justify-content: center;
  gap: 40px;
}

.social-links li {
  margin: 0;
}

.social-links a {
  color: #ff6f61;
  font-size: 1.5rem;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 10px;
  transition: color 0.3s ease, transform 0.3s ease;
}

.social-links a i {
  font-size: 2rem;
}

.social-links a:hover {
  color: #ff3b2e;
  transform: scale(1.1);
}

/* Footer Bottom Border Glow */
footer:before {
  content: "";
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  height: 2px;
  background: linear-gradient(90deg, transparent, #ff6f61, transparent);
  border-radius: 50%;
  animation: glow 3s ease-in-out infinite;
}

@keyframes glow {
  0% { background-position: 0 0; }
  50% { background-position: 100% 0; }
  100% { background-position: 0 0; }
}

/* Font Awesome Integration */
@import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');

/* Responsive Design */
@media (max-width: 768px) {
  .social-links {
    flex-direction: column;
    gap: 20px;
  }
}



/* Responsive Design */
@media (max-width: 768px) {
  .contact h2 {
    font-size: 2rem;
  }

  .contact p {
    font-size: 1rem;
  }

  .contact-btn {
    padding: 10px 20px;
  }
}
</style>

